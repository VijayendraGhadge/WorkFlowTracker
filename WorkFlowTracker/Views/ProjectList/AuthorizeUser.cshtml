
@{
    ViewBag.Title = "AuthorizeUser";
}
@model List<WorkFlowTracker.Models.UserSelectionViewModel>
<div>
    @using (Html.BeginForm("SubmitAuthorizedUser", "ProjectList"))
    {
        @Html.AntiForgeryToken()
        <h4>Authorize users for project @ViewBag.ProjectName</h4>
        <hr />
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <table>
            <tr>
                <div class="form-group">
                    <div class="col-md-10">
                        <td>
                            @Html.LabelFor(m => m[0].First_Name, new { @class = "col-md-2 control-label" })
                        </td>
                    </div>
                    <div>
                        <td>
                            @Html.LabelFor(m => m[0].Last_Name, new { @class = "col-md-2 control-label" })
                        </td>
                    </div>
                    <div>
                        <td>
                            @Html.LabelFor(m => m[0].Email, new { @class = "col-md-2 control-label" })
                        </td>
                    </div>
                    <div>
                        <td>
                            @Html.LabelFor(m => m[0].Authorized, new { @class = "col-md-2 control-label" })
                        </td>
                    </div>
                </div>

            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <div class="form-group">
                        <div class="col-md-10">
                            <td>
                                @Html.DisplayFor(m => item.First_Name, new { @class = "col-md-2 control-label" })
                            </td>
                        </div>
                        <div>
                            <td>
                                @Html.DisplayFor(m => item.Last_Name, new { @class = "col-md-2 control-label" })
                            </td>
                        </div>
                        <div>
                            <td>
                                @Html.DisplayFor(m => item.Email, new { @class = "col-md-2 control-label" })
                            </td>
                        </div>
                        <div>
                            <td>
                                <input type="checkbox" name="@item.Email" class = "col-md-2 control-label" />
                            </td>
                        </div>
                    </div>

                </tr>
            }
        </table>
        <input type="hidden" name="ProjectName" value="@ViewBag.ProjectName">
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" class="btn btn-default" value="Authorize" />
                    </div>
                </div>
    }
    </div>
